package fundamentos;

import java.util.Scanner;

public class ConversorTemperatura {

	public static void main(String[] args) {

		Scanner entrada = new Scanner (System.in);
		
		System.out.println("Informe o valor de temperatura que deseja converter: ");
		double temp = entrada.nextDouble();
		
		System.out.printf("Escolha qual convers찾o deseja fazer da temperatura %.2f째: \n",temp );
		
		System.out.println("Digite 'F' para fazer convers찾o de Fahrenheit para Celsius");
		System.out.println("Digite 'C' para fazer convers찾o de Celsius para Fahrenheit");
		
		
		String tipoTemp = entrada.next();
		double calculo ="F".equals(tipoTemp)? (temp - 32) * 5.0/9: 0;
		double calculo ="C".equals(tipoTemp)? (temp * 1,8) + 32:calculo;
		
		
		
		entrada.close();
	}
}
