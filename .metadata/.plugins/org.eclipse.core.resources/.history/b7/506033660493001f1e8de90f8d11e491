package fundamentos.operadores;

import java.util.Scanner;

public class DesafioQuadradoCubo {

	public static void main(String[] args) {

		Scanner entrada = new Scanner(System.in);
		System.out.println("Informe o valor para ser elevado ao Quadrado e ao Cubo: ");

		Double quadrado = Math.pow(entrada, 2);
		Double cubo = Math.pow(entrada, 3);

		System.out.printf("O valor de %s ao quadrado é: %.f ao cubo é: %.f ", entrada, quadrado, cubo);
		
		entrada.close();
	}
}
