package controle;

import java.util.Scanner;

public class DesafioNumeroPrimo {

	public static void main(String[] args) {

		Scanner entrada = new Scanner(System.in);

		System.out.println("Informe o numero que deseja saber se ele é um numero primo: ");
		int valor = entrada.nextInt();

		if (valor % valor == 0 && valor % 2 == 0 ) {
			System.out.printf("%d é um numero primo.", valor);
		} else if (valor % valor == 0 && valor % 3 == 1) {
			System.out.printf("%d não é um numero primo.", valor);
		} else if (valor % valor == 0 && valor % 7 == 1) {
			System.out.printf("%d não é um numero primo.", valor);
		} else if (valor % valor == 0 && valor % 11 == 1) {
			System.out.printf("%d não é um numero primo.", valor);
		} else if (valor % valor == 0 && valor % 13 == 1) {
			System.out.printf("%d não é um numero primo.", valor);
		}

		entrada.close();
	}
}
